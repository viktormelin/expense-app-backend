model Expenses {
  id          Int          @id @default(autoincrement()) @map("_id") 
  amount      Float
  group       String          
  owner       String          
  title       String
  users       Json
}

model Groups {
  id          Int   @id @default(autoincrement()) @map("_id") 
  expenses    Json
  members     Json
  owner       String  
  title       String
}

model User {
  id        Int   @id @default(autoincrement()) @map("_id") 
  email     String
  firstname String
  groups    Json
  lastname  String
  password  String
  phone     String
}
