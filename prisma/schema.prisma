generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type ExpensesUsers {
  amount String
  user   String @db.ObjectId
}

model Expenses {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  amount      Float
  description String
  group       String          @db.ObjectId
  owner       String          @db.ObjectId
  title       String
  users       ExpensesUsers[]
}

model Groups {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  description String
  expenses    String[] @db.ObjectId
  members     String[] @db.ObjectId
  owner       String   @db.ObjectId
  title       String
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  firstname String
  groups    String[] @db.ObjectId
  lastname  String
  password  String
  phone     String
}
